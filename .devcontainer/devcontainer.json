{
    "name": "cwru_data_marshal",
    "build": {
        "context": "..",
        "dockerfile": "../docker/Dockerfile",
        "target": "dev",
        "args": {
            //BUILD_ISMRMRD_FROM_SOURCE": "true",
            //ISMRMRD_TAG": "1.14.0"
            "BUILD_ISMRMRD_FROM_SOURCE": "true",
            "ISMRMRD_TAG": "main"
        }
    },
    "containerEnv": {
        "CMAKE_GENERATOR": "Ninja",
        "CMAKE_LINK_PARALLEL_JOBS": "1",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-fuse-ld=lld",
        "CMAKE_SHARED_LINKER_FLAGS_INIT": "-fuse-ld=lld",
        "CMAKE_BUILD_PARALLEL_LEVEL": "6"
    },
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ]
        }
    },
    "workspaceFolder": "/src",
    "mounts": [
        "source=${localWorkspaceFolder},target=/src,type=bind",
        "source=${localWorkspaceFolder}/data,target=/data,type=bind"
    ],
    "remoteUser": "root",
    "updateRemoteUserUID": false,
    //"postCreateCommand": "printf 'Devcontainer built using %s\\n' 'docker/Dockerfile'"
    "postCreateCommand": "printf 'Devcontainer built using %s\\nGenerator=%s LinkParallel=%s\\n' 'docker/Dockerfile' \"$CMAKE_GENERATOR\" \"$CMAKE_LINK_PARALLEL_JOBS\""
}